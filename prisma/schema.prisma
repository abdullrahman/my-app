// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String
  createdAt DateTime @default(now())
}

enum UserPermissionRole {
  ADMIN
}

model Info {
  id          Int                @id @default(autoincrement())
  name        String
  city        String
  email       String             @unique
  password    String
  role        UserPermissionRole @default(ADMIN)
  skil        Skil[]
  exper       Experience[]
  project     Project[]
  socialMedia SocialMedia[]
  certificate Certificate[]
  careerObJ   String
  summary     String
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  onDelete    Boolean            @default(false)
}

enum CertificateType {
  Associate
  Recomendation
  Distinguished
  OnlinCertificate
}

model Certificate {
  id              Int             @id @default(autoincrement())
  certiType       CertificateType
  certiFrom       String?
  certiGPA        String?
  certiUniv       String?
  certiGrade      String?
  certiFromDate   DateTime?
  certiToDate     DateTime?
  certiTotalHours String?
  InfoId          Int?
  info            Info?           @relation(fields: [InfoId], references: [id])
  createdAt       DateTime        @default(now())
  updatedAt       DateTime?       @updatedAt
  onDelete        Boolean         @default(false)
}

model Skil {
  id        Int      @id @default(autoincrement())
  skil      String
  skilType  String
  InfoId    Int
  info      Info     @relation(fields: [InfoId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  onDelete  Boolean  @default(false)
}

model Experience {
  id            Int      @id @default(autoincrement())
  experName     String
  experFromDate DateTime
  experTodate   DateTime
  experYears    String
  InfoId        Int
  info          Info     @relation(fields: [InfoId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  onDelete      Boolean  @default(false)
}

enum ProjectType {
  Website
  WindowsApplication
  TestTeam
}

model Project {
  id                     Int         @id @default(autoincrement())
  projectName            String
  projectBeneficiary     String
  projectType            ProjectType
  projectDesc            String
  projctSkils            String[]
  projectMainSections    String[]
  projectMainSectionDesc String[]
  projectLink            String
  projectImg             String
  InfoId                 Int
  info                   Info        @relation(fields: [InfoId], references: [id])
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
  onDelete               Boolean     @default(false)
}

model SocialMedia {
  id        Int      @id @default(autoincrement())
  sociName  String
  sociLink  String
  InfoId    Int
  info      Info     @relation(fields: [InfoId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  onDelete  Boolean  @default(false)
}
